<div class="container terms_condition_main custom-page-section-main common-pages-new">
  <div class="grid">
    <div class="grid__item">
      {% if section.settings.image != blank %}
        <div class="terms_condition_image_main">
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}" />
        </div>
      {% endif %}
      {% if page.content != blank %}
        <div class="rte terms_condition_inner_text_new custom-page-section common-pages-inner-new">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Terms Condition",
  "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Normal Image"
      }
    ]
}
{% endschema %}
  