{% if section.blocks.size > 0 %}
  <div class="container">
    <div class="service-fea-new">
      {% for block in section.blocks %}
        <div class="service-fea-in-new">
          {% if block.settings.image != blank %}
            <div class="service-fea-image-new">
              <img src="{{ block.settings.image | img_url:'master' }}" alt="{{ block.settings.image.alt }}" width="100" height="100" class="lazyload">
            </div>
          {% endif %}
          {% if block.settings.title != blank or block.settings.subtitle != blank %}
            <div class="service-fea-info-new">
              {% if block.settings.title != blank %}
                <h3>{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <p>{{ block.settings.subtitle }}</p>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
 {
   "name": "Text-Column-With-Images-2",
"class": "Text-Column-With-Images-2",
"max_blocks": 4,
   "settings": [

],
"blocks": [
     {
       "type": "Icon-Text",
       "name": "Ico Text",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
	  {
		"type": "text",
           "id": "title",
           "label": "Add Heading",
		"default": "Heading"
         },
         {
		"type": "text",
           "id": "subtitle",
           "label": "Add Heading Information",
		"default": "Information"
         }
       ]
     }
   ]
 }
{% endschema %}
